<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SinoStar.App.Anti_Smuggling.DocViewItemCell">
    <Grid ColumnSpacing="2" Padding="15" RowSpacing="4">
        <Grid.RowDefinitions>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition Height="1"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="40"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Image  x:Name="pdf" Grid.Column="0" Grid.Row="0" 
                Source="pdf.png"  HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" 
                ></Image>
        <Label Grid.Row="0" 
               Grid.Column="1"
               Text="{Binding DocTitle}" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"  />
        <Image  x:Name="right" Grid.Column="2" Grid.Row="0"
                Source="right.png"  HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" 
                ></Image>
        <!--<StackLayout Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="4">
            <BoxView HeightRequest="1" BackgroundColor="Black"></BoxView>
        </StackLayout>-->
    </Grid>
</ContentView>